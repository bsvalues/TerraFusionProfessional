{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "license": "UNLICENSED",
  "description": "Combined application from TerraFusionPro and TerraInsight with legacy database integration",
  "workspaces": [
    "apps/*",
    "packages/*",
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx server/index.ts",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push"
  },
  "author": "",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.4"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.7.1"
  }
}
