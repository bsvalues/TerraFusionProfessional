{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["shared/*", "server/*", "client/*"]
    }
  },
  "include": ["server/**/*.ts", "shared/**/*.ts", "client/**/*.ts"]
}
